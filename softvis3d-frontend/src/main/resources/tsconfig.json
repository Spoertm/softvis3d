{
    "compilerOptions": {
        "outDir": "./app/",
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "module": "commonJS",
        "target": "es6",
        "jsx": "react",
        "types": [
          "react",
          "react-dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!node_modules/**"
    ]
}
