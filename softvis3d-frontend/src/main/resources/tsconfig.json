{
    "compilerOptions": {
        "outDir": "./app/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "module": "commonJS",
        "target": "es5",
        "jsx": "react"
    },
    "files": [
        "./typings/index.d.ts"
    ],
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.tsx",
        "!node_modules/**"
    ]
}
